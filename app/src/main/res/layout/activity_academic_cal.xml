<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context="com.sandywinata.isgupdate.view.AcademicCal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txtHeaderAcademic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30dp"
            android:text="ACADEMIC CALENDAR"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/imgTranscript"
            android:layout_below="@id/txtHeaderAcademic"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_margin="8dp"/>
        <EditText
            android:id="@+id/tvName"
            android:layout_below="@id/imgTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Note : 1. Course Selection Week 2-3"
            android:gravity="center"/>
        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_below="@+id/tvName"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>
